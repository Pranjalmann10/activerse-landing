# Server Configuration
PORT=3000

# Session Secret (change this in production)
# Generate a strong random secret for production (e.g., using: openssl rand -base64 32)
SESSION_SECRET=your-super-secret-session-key-change-in-production

# MongoDB Atlas Connection String
# Get your connection string from https://cloud.mongodb.com/
# Format: mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/activerse?retryWrites=true&w=majority

# Admin User Configuration
# Set these to create/update the admin user on server start
# IMPORTANT: Change these from default values for security
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password

# Stripe Configuration
# Get your keys from https://dashboard.stripe.com/apikeys
# Use test keys (sk_test_...) for development
# Use live keys (sk_live_...) for production
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration (for contact form)
# For Gmail, use an App Password: https://myaccount.google.com/apppasswords
# IMPORTANT: Never use your regular Gmail password - use an App Password
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password_here
CONTACT_EMAIL=your_contact_email@gmail.com
